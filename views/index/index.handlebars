<section class="exchangeInput">

    <div class="input-field">


    </div><input type="number" min="0" value="0" class="resultToExchange" title="Wpisz kwotę którą chesz wymienić">
    <select name="currency" class="selectedCurrency" title="Wybierz walutę, którą chcesz wymienić">
        <option value="" selected>Wybierz</option>
        {{#each currencyRates}}
        <option value="{{code}}">{{code}}</option>
        {{/each}}
    </select>
    <label for="currency"> =</label>


    <input type="number" min="0" value="0" name="plnToExchange" class="plnToExchange"
        title="Wpisz kwotę którą chesz wymienić">
    <label for="plnToExchange" class="polishCurrencyName"> PLN</label>
</section>

{{#each currencyRates}}
<section class="specificCurrency">
    <div class="round1"></div>
    <p class="foreginCurrency">{{currency}}</p>
    <p class="polishCurrencyQuantity">1</p>
    <p class="foreginCurrencyName">{{code}}</p>
    <p class="equals">=</p>
    <p class="polishCurenncy">Polski złoty</p>
    <p class="foreginQuantity">{{mid}}</p>
    <p class="shortPolishCurrency">PLN</p>
    <div class="round2"></div>
</section>
{{/each}}